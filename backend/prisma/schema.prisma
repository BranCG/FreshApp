// Esquema de base de datos para FreshApp
// PostgreSQL con extensión PostGIS para geolocalización

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // extensions = [postgis]  // Temporalmente comentado - instalar PostGIS luego
}

// ========== ENUMS ==========

enum UserRole {
  CLIENT
  PROFESSIONAL
  ADMIN
}

enum ServiceCategory {
  BARBER
  TATTOO_ARTIST
  MANICURIST
}

enum ServiceRequestStatus {
  PENDING
  ACCEPTED
  REJECTED
  ARRIVED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  PAYMENT_PENDING
  PAID
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum NotificationType {
  SERVICE_REQUEST
  SERVICE_ACCEPTED
  SERVICE_REJECTED
  SERVICE_STARTED
  SERVICE_COMPLETED
  PAYMENT_RECEIVED
  NEW_MESSAGE
  NEW_REVIEW
  VERIFICATION_APPROVED
  VERIFICATION_REJECTED
}

// ========== MODELS ==========

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  phone         String?   @unique
  passwordHash  String    @map("password_hash")
  role          UserRole
  firstName     String    @map("first_name")
  lastName      String    @map("last_name")
  profilePhoto  String?   @map("profile_photo")
  isActive      Boolean   @default(true) @map("is_active")
  isVerified    Boolean   @default(false) @map("is_verified")
  
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Relaciones
  professional      Professional?
  clientRequests    ServiceRequest[] @relation("ClientRequests")
  professionalRequests ServiceRequest[] @relation("ProfessionalRequests")
  sentMessages      Message[]
  reviewsGiven      Review[] @relation("ReviewsGiven")
  reviewsReceived   Review[] @relation("ReviewsReceived")
  paymentMethods    PaymentMethod[]
  notifications     Notification[]
  deviceTokens      DeviceToken[]

  @@map("users")
  @@index([email])
  @@index([phone])
  @@index([role])
}

model Professional {
  id            String          @id @default(uuid())
  userId        String          @unique @map("user_id")
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  category      ServiceCategory
  bio           String?         @db.Text
  prices        Json?           // { "haircut": 15000, "beard": 10000 }
  hashtags      String[]        // ["dog_lover", "geek", "conversador"]
  
  address       String?
  latitude      Float?
  longitude     Float?
  // location se maneja con PostGIS
  
  isAvailable   Boolean         @default(false) @map("is_available")
  avgRating     Float           @default(0) @map("avg_rating")
  totalReviews  Int             @default(0) @map("total_reviews")
  totalServices Int             @default(0) @map("total_services")
  
  createdAt     DateTime        @default(now()) @map("created_at")
  updatedAt     DateTime        @updatedAt @map("updated_at")

  // Relaciones
  verification      Verification?
  portfolioItems    PortfolioItem[]
  availabilitySlots AvailabilitySlot[]

  @@map("professionals")
  @@index([category])
  @@index([isAvailable])
  @@index([avgRating])
  @@index([latitude, longitude])
}

model Verification {
  id                    String              @id @default(uuid())
  professionalId        String              @unique @map("professional_id")
  professional          Professional        @relation(fields: [professionalId], references: [id], onDelete: Cascade)
  
  idDocumentUrl         String              @map("id_document_url")
  backgroundCheckUrl    String              @map("background_check_url")
  status                VerificationStatus  @default(PENDING)
  rejectionReason       String?             @map("rejection_reason") @db.Text
  
  verifiedBy            String?             @map("verified_by") // Admin user ID
  verifiedAt            DateTime?           @map("verified_at")
  
  createdAt             DateTime            @default(now()) @map("created_at")
  updatedAt             DateTime            @updatedAt @map("updated_at")

  @@map("verifications")
  @@index([status])
}

model PortfolioItem {
  id              String        @id @default(uuid())
  professionalId  String        @map("professional_id")
  professional    Professional  @relation(fields: [professionalId], references: [id], onDelete: Cascade)
  
  imageUrl        String        @map("image_url")
  description     String?       @db.Text
  displayOrder    Int           @default(0) @map("display_order")
  
  createdAt       DateTime      @default(now()) @map("created_at")

  @@map("portfolio_items")
  @@index([professionalId])
}

model AvailabilitySlot {
  id              String        @id @default(uuid())
  professionalId  String        @map("professional_id")
  professional    Professional  @relation(fields: [professionalId], references: [id], onDelete: Cascade)
  
  dayOfWeek       Int           @map("day_of_week") // 0=Domingo, 1=Lunes, etc.
  startTime       String        @map("start_time")  // "09:00"
  endTime         String        @map("end_time")    // "18:00"

  @@map("availability_slots")
  @@index([professionalId])
}

model ServiceRequest {
  id              String                @id @default(uuid())
  
  clientId        String                @map("client_id")
  client          User                  @relation("ClientRequests", fields: [clientId], references: [id])
  
  professionalId  String                @map("professional_id")
  professional    User                  @relation("ProfessionalRequests", fields: [professionalId], references: [id])
  
  category        ServiceCategory
  status          ServiceRequestStatus  @default(PENDING)
  
  requestedDate   DateTime              @map("requested_date")
  clientAddress   String                @map("client_address")
  clientLatitude  Float                 @map("client_latitude")
  clientLongitude Float                 @map("client_longitude")
  description     String?               @db.Text
  
  estimatedPrice  Decimal               @map("estimated_price") @db.Decimal(10, 2)
  
  acceptedAt      DateTime?             @map("accepted_at")
  arrivedAt       DateTime?             @map("arrived_at")
  startedAt       DateTime?             @map("started_at")
  completedAt     DateTime?             @map("completed_at")
  cancelledAt     DateTime?             @map("cancelled_at")
  cancellationReason String?            @map("cancellation_reason") @db.Text
  
  createdAt       DateTime              @default(now()) @map("created_at")
  updatedAt       DateTime              @updatedAt @map("updated_at")

  // Relaciones
  payment         Payment?
  review          Review?
  messages        Message[]

  @@map("service_requests")
  @@index([clientId, status])
  @@index([professionalId, status])
  @@index([status])
  @@index([requestedDate])
}

model Payment {
  id                  String          @id @default(uuid())
  serviceRequestId    String          @unique @map("service_request_id")
  serviceRequest      ServiceRequest  @relation(fields: [serviceRequestId], references: [id])
  
  amount              Decimal         @db.Decimal(10, 2)
  platformCommission  Decimal         @map("platform_commission") @db.Decimal(10, 2)
  professionalAmount  Decimal         @map("professional_amount") @db.Decimal(10, 2)
  
  paymentMethod       String          @map("payment_method") // "mercadopago", "stripe", etc.
  transactionId       String?         @map("transaction_id") // ID de MercadoPago
  status              PaymentStatus   @default(PENDING)
  errorMessage        String?         @map("error_message") @db.Text
  
  paidAt              DateTime?       @map("paid_at")
  createdAt           DateTime        @default(now()) @map("created_at")

  @@map("payments")
  @@index([status])
  @@index([transactionId])
}

model PaymentMethod {
  id          String    @id @default(uuid())
  userId      String    @map("user_id")
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  provider    String    // "mercadopago", "stripe", "card"
  token       String    // Token del método de pago
  metadata    Json?     // Información adicional (últimos 4 dígitos, marca, etc.)
  isDefault   Boolean   @default(false) @map("is_default")
  
  createdAt   DateTime  @default(now()) @map("created_at")

  @@map("payment_methods")
  @@index([userId])
}

model Review {
  id                String          @id @default(uuid())
  serviceRequestId  String          @unique @map("service_request_id")
  serviceRequest    ServiceRequest  @relation(fields: [serviceRequestId], references: [id])
  
  clientId          String          @map("client_id")
  client            User            @relation("ReviewsGiven", fields: [clientId], references: [id])
  
  professionalId    String          @map("professional_id")
  professional      User            @relation("ReviewsReceived", fields: [professionalId], references: [id])
  
  rating            Int             // 1-5 estrellas
  comment           String?         @db.Text
  
  createdAt         DateTime        @default(now()) @map("created_at")

  @@map("reviews")
  @@index([professionalId])
  @@index([rating])
}

model Message {
  id                String          @id @default(uuid())
  serviceRequestId  String          @map("service_request_id")
  serviceRequest    ServiceRequest  @relation(fields: [serviceRequestId], references: [id], onDelete: Cascade)
  
  senderId          String          @map("sender_id")
  sender            User            @relation(fields: [senderId], references: [id])
  
  content           String          @db.Text
  isRead            Boolean         @default(false) @map("is_read")
  
  createdAt         DateTime        @default(now()) @map("created_at")

  @@map("messages")
  @@index([serviceRequestId, createdAt])
  @@index([senderId])
}

model Notification {
  id          String            @id @default(uuid())
  userId      String            @map("user_id")
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  type        NotificationType
  title       String
  message     String            @db.Text
  data        Json?             // Datos adicionales (IDs, etc.)
  
  isRead      Boolean           @default(false) @map("is_read")
  createdAt   DateTime          @default(now()) @map("created_at")

  @@map("notifications")
  @@index([userId, isRead])
  @@index([createdAt])
}

model DeviceToken {
  id          String    @id @default(uuid())
  userId      String    @map("user_id")
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  token       String    @unique
  platform    String    // "ios", "android"
  
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@map("device_tokens")
  @@index([userId])
}
